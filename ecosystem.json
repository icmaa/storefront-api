{
  "apps": [
    {
      "name": "api",
      "script": "./dist/src/index.js",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "ignore_watch": ["node_modules"],
      "max_memory_restart": "1G",
      "instances": "3",
      "exec_mode": "cluster",
      "node_args": "--max_old_space_size=1024",
      "env": {
        "XDEBUG_SESSION": "vscode"
      }
    }
  ]
}
